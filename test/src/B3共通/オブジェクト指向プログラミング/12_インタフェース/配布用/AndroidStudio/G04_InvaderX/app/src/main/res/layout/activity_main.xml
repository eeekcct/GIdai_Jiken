<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/backGroundImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/space" />

    <ImageView
        android:id="@+id/canonImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/canon" />

    <ImageView
        android:id="@+id/ufoImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ufo" />

    <TextView
        android:id="@+id/gameOverTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@android:color/holo_orange_light"
        android:text="Game Over !!"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="30sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/gameClearTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@android:color/holo_orange_light"
        android:text="Game Clear !!"
        android:textColor="@android:color/holo_green_light"
        android:textSize="30sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/singleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@android:color/holo_orange_dark"
        android:padding="5dp"
        android:text="1"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/doubleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/singleTextView"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_toRightOf="@+id/singleTextView"
        android:background="@android:color/holo_orange_dark"
        android:padding="5dp"
        android:text="2"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tripleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/singleTextView"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_toRightOf="@+id/doubleTextView"
        android:background="@android:color/holo_orange_dark"
        android:padding="5dp"
        android:text="3"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/normalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="false"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_toLeftOf="@+id/penetrationTextView"
        android:background="@android:color/holo_purple"
        android:padding="5dp"
        android:text="N"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/penetrationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@android:color/holo_purple"
        android:padding="5dp"
        android:text="P"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp" />

</RelativeLayout>